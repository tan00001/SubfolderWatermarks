<UserControl x:Class="SubfolderWatermarks.WaterMarkControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SubfolderWatermarks"
             mc:Ignorable="d" 
             d:DesignHeight="28" d:DesignWidth="140">
    <Border
        Name="WaterMarkBorder"
        Background="red"
        BorderBrush="Transparent"
        BorderThickness="1"
        Margin="0"
        Padding="0"
        Opacity="0.7">
        <Grid>
            <Label
                Name="WaterMarkText"
                FontFamily="Arial"
                FontSize="12"
                Content="@SubfolderWatermarks"
                Foreground="Black" />
            <Image
                Name="WaterMarkImage"
                Visibility="Hidden" />
        </Grid>
    </Border>
</UserControl>
